{% extends "PVCoreBundle:Default:layout.html.twig" %}

{% block coreBody %}
    <div class="jumbotron">
        <h4>Ma plateforme vid√©o pour pratiquer.</h4>
    </div>

    <div id="videos">

        <div class="row">
            {% for video in videos %}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="{{ asset(video.image.FileName) }}" alt="...">
                        <div class="caption">
                            <h3>{{ video.titre }}</h3>
                            <p>{{ video.description|length > 50 ? video.description|slice(0, 50) ~ '...' : video.description  }}</p>
                            <p> <a href="{{ path("pv_plateforme_view", {"id":video.id}) }}" class="btn btn-default" role="button">Voir</a></p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}